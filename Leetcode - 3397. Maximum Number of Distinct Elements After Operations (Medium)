
//O(n)
class Solution {
public:
    int maxDistinctElements(vector<int>& nums, int k) {
        
        int n=nums.size();
        int ans=0;
        sort(nums.begin(),nums.end());
        int curr=nums[0]-k;
        for(int i=1;i<nums.size();i++){
            int difference=nums[i]-curr;
        
            if(difference>k){
                curr=nums[i]-k;
            }
            else if(abs(difference-1)<=k){
                curr=nums[i]-(difference-1);
            }
            else if(abs(difference-1)>k){
                ans++;
            }

        }
        return n-ans;
    }
};
