class Solution {
public:
    int countValidSelections(vector<int>& nums) {
        auto first = nums.begin();
  	    auto last = nums.end();
        int sum = accumulate(first, last, 0);
        int ans=0;
        int currSum=0;
        for(auto x: nums){
            currSum+=x;
            sum-=x;
            if(x==0){
                if(abs(sum-currSum)==1)ans++;
                else if(sum==currSum)ans+=2;
            }
        }
        return ans;
    }
};
