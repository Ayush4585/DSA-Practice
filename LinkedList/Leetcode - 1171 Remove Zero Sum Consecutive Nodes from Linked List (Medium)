class Solution {
public:
    ListNode* removeZeroSumSublists(ListNode* head) {
        int prefixSum = 0;
        unordered_map<int, ListNode*> mp;
        ListNode* dummy = new ListNode(0);
        dummy->next = head;
        mp[0] = dummy;
        while(head) {
            prefixSum += head->val;
            if(mp.find(prefixSum) != mp.end()) {
                ListNode* prev = mp[prefixSum];
                ListNode* start = prev;
                int pSum  = prefixSum;
                
                while(start != head) {
                    start = start->next;
                    pSum += start->val;
                    if(start != head)
                        mp.erase(pSum);
                }
                
                prev->next = start->next;
                
            } else {
                mp[prefixSum] = head;
            }
            
            head = head->next;
        }
        
        return dummy->next;
    }
};
