class Solution {
public:
    int maxIncreasingSubarrays(vector<int>& nums) {
        int n = nums.size();
        int currLength = 1;
        int prevLength = 0;
        int ans=0;
        for(int i = 1; i < n; i++) {
            if(nums[i] > nums[i-1]) {
                currLength++;
            } else { 
                prevLength = currLength;
                currLength = 1;
            }
            ans=max(ans,currLength/2);

            if(min(currLength, prevLength)>ans) {
                ans=min(currLength, prevLength);
            }
        }

        return ans;
    }
};
